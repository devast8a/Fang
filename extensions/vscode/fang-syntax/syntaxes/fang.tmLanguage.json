{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Fang",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#attributes"
		},
		{
			"include": "#operators"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.fang",
				"match": "\\b(and|break|case|continue|else|enum|fn|for|if|in|impl|infix|match|move|mut|or|own|postfix|prefix|return|struct|trait|val|while)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.single.fang",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.fang",
					"match": "\\\\."
				}
			]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line",
				"match": "(#+ [^\\n]*\\n)|(#+\\n)"
			}]
		},
		"attributes": {
			"patterns": [{
				"name": "variable.other",
				"match": "#+[a-zA-Z_][a-zA-Z0-9_]*"
			}]
		},
		"operators": {
			"patterns": [{
				"name": "keyword.operator",
				"match": "[~!@#$%^&*+=|?/:.\\-\\\\<>]+"
			}]
		}
	},
	"scopeName": "source.fang"
}